{
    "description": "Configuration for miscdevice custom haptic Tests",
    "driver": {
        "type": "OHJSUnitTest",
        "test-timeout": "160000",
        "shell-timeout": "160000",
        "bundle-name": "ohos.acts.sensors.miscdevice.haptic",
        "package-name": "ohos.acts.sensors.miscdevice.haptic"
    },
    "kits": [
        {
            "test-file-name": [
                "ActsCustomHapticTest.hap"
            ],
            "type": "AppInstallKit",
            "cleanup-apps": true
        },
        {
            "type": "ShellKit",
            "run-command": [
                "remount",
                "mkdir /data/test"
            ]
        },
        {
            "type": "PushKit",
            "push": [
                "ActsCustomHapticTest.hap -> /data/ActsCustomHapticTest.hap",
                "./resource/coin_drop.json -> /data/app/el2/100/base/ohos.acts.sensors.miscdevice.haptic/files/"
            ]
        },
        {
            "type": "ShellKit",
            "run-command": [
                "chmod 644 /data/test/*.hap",
                "scanner",
                "param set persist.ace.testmode.enabled 1"
            ]
        }
    ]
}